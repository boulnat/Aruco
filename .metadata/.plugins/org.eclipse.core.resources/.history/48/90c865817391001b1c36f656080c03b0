#include <stdio.h>
#include <stdint.h>
#include <stdbool.h>
#include <main.h>
#include <AS7341.h>

uint16_t readChannel(I2C_HandleTypeDef *hi2c1, as7341_adc_channel_t channel) {

	uint8_t read[2]={0,0};
	uint16_t read16bits = 0;

	while(HAL_I2C_Master_Transmit(hi2c1, AS7341_I2CADDR_DEFAULT, &reg, 1, HAL_MAX_DELAY) != HAL_OK);
	while(HAL_I2C_IsDeviceReady(hi2c1,AS7341_I2CADDR_DEFAULT,10,200)!=HAL_OK);
	while(HAL_I2C_Master_Receive(hi2c1, AS7341_I2CADDR_DEFAULT, read, sizeof(read), HAL_MAX_DELAY)!= HAL_OK);

	read16bits = (read[0] << 8) | read[1];
	return read16bits;
  // each channel has two bytes, so offset by two for each next channel
  Adafruit_BusIO_Register channel_data_reg = Adafruit_BusIO_Register(
      i2c_dev, (AS7341_CH0_DATA_L + 2 * channel), 2, LSBFIRST);

  return channel_data_reg.read();
}

uint16_t getChannel(as7341_color_channel_t channel) {
  return _channel_readings[channel];
}


